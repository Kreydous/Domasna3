@using Domasna3.Models
@model LoginViewModel

<style>
    import url(https://fonts.googleapis.com/css?family=Open+Sans:100,300,400,700);
    import url(//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css);

    body, html {
        height: 100%;
    }

    body {
        font-family: 'Open Sans';
        font-weight: 100;
        display: flex;
        overflow: auto;
    }

    input {
        :: -webkit-input-placeholder

    {
        color: rgba(255,255,255,0.7);
    }

    ::-moz-placeholder {
        color: rgba(255,255,255,0.7);
    }

    :-ms-input-placeholder {
        color: rgba(255,255,255,0.7);
    }

    &:focus {
        outline: 0 transparent solid;
        :: -webkit-input-placeholder

    {
        color: rgba(0,0,0,0.7);
    }

    ::-moz-placeholder {
        color: rgba(0,0,0,0.7);
    }

    :-ms-input-placeholder {
        color: rgba(0,0,0,0.7);
    }

    }
    }

    .login-form {
        background-color: black;
        box-shadow: 0 0 1rem rgba(0,0,0,0.3);
        min-height: 45rem;
        margin: auto;
        max-width: 45%;
        margin-top: 10%;
    }

    .login-text {
        //background: hsl(40,30,60);
        //border-bottom: .5rem solid white;
        color: black;
        font-size: 2.5rem;
        margin: 0 auto;
        max-width: 50%;
        padding: .5rem;
        text-align: center;
        //text-shadow: 1px -1px 0 rgba(0,0,0,0.3);
        .fa-stack-1x

    {
        color: black;
    }

    }

    .login-field {
        background-color: white;
        border: 0 solid;
        border-bottom: 1px solid rgba(white, .5);
        color: black;
        display: block;
        padding: .5rem;
        transition: 250ms background ease-in;
        width: 100%;
        margin: 10px;
        height: 35px;
        margin-left: 25%;
        &:focus

    {
        background: white;
        color: black;
        transition: 250ms background ease-in;
    }

    }

    .login-forgot-pass {
        //border-bottom: 1px solid white;
        bottom: 0;
        color: white;
        cursor: pointer;
        display: block;
        font-size: 75%;
        left: 0;
        opacity: 0.6;
        padding: .5rem;
        position: absolute;
        text-align: center;
        //text-decoration: none;
        width: 100%;
        &:hover

    {
        opacity: 1;
    }

    }

    .login-submit {
        border: 1px solid white;
        background: transparent;
        color: white;
        display: inline;
        float: right;
        min-width: 1px;
        padding: .25rem;
        width: 30%;
        margin-right: 25%;
        transition: 250ms background ease-in;
        height: 40px;
        font-size: 20px;
        margin-bottom: 30px;
    }

    .login-cancel {
        border: 1px solid white;
        background: transparent;
        color: white;
        display: inline;
        margin-left: 12px;
        min-width: 1px;
        width: 30%;
        padding: .11rem;
        transition: 250ms background ease-in;
        font-size: 20px;
        height: 40px;
        margin-bottom: 30px;
        &:hover, &:focus

    {
        background: white;
        color: black;
        transition: 250ms background ease-in;
    }

    }


    [class*=underlay] {
        left: 0;
        min-height: 100%;
        min-width: 100%;
        position: fixed;
        top: 0;
    }

    .underlay-photo {
        background: url("../../NewFolder1/background.png");
        background-size: cover;
        z-index: -1;
    }
</style>

<div class="underlay-photo"></div>
<div class="underlay-black"></div>

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
{
    <p class="login-text">
        <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-lock fa-stack-1x"></i>
        </span>
    </p>
    @Html.AntiForgeryToken()
    <h4 style="text-align:center;font-size: 200%; color:white;">O&E LOGIN </h4>
    <hr />

    <div class="form-group" style="font-size: 180%; color:white;">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter email", @class = "login-field" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="font-size: 180%; color:white">
        <div class="col-md-10">
           
            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter password", @class = "login-field" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" , style=" margin-left: 25%;">
            <div class="checkbox" style="font-size: 180%; color:white">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" name="Login" value="CANCEL" class="login-cancel" />
            <input type="submit" name="Login" value="LOGIN" class="login-submit" />


        </div>
    </div>
    <div class="col-md-offset-2 col-md-10" , style="border:5px dashed white; background-color:white; width:50%; margin-left:25%; text-align:center; font-size:150%; "> @Html.ActionLink("Register as a new user", "Register")</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
