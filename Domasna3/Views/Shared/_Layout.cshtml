<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
 <style>
     .body {
         font: normal 15px "Helvetica Neue", Arial, Helvetica, Geneva, sans-serif;
     }
 </style>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="https://www.linkpicture.com/q/logo_398.png" width="70" height="70" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Дома", "Index", "Home")</li>
                    <li>@Html.ActionLink("Нарачај", "Index", "Lokacii")</li>
                    <li>@Html.ActionLink("Претходни нарачки", "Index", "OrderHistory")</li>
                    <li>@Html.ActionLink("За нас", "About", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content poz">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - O&E</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
